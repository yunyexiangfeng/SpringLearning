<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/test</property>
        <property name="connection.username">root</property>
        <property name="connection.password">123456</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- SQL dialect -->
        <!--org.hibernate.dialect.-->
        <property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>

        <!-- Disable the second-level cache  -->
        <!--关闭二级缓存-->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <!--在标准输出流中打印sql-->
        <!--true or false-->
        <property name="show_sql">true</property>

        <!--4. Schema generation-->
        <!-- Drop and re-create the database schema on startup -->
        <!--https://docs.jboss.org/hibernate/orm/5.4/userguide/html_single/Hibernate_User_Guide.html#configurations-hbmddl-->
        <property name="hibernate.hbm2ddl.auto">create</property>

        <!--4.1. Importing script files-->
        <!--execute sql script only the hbm2ddl.auto=create/create-drop-->
        <!--hibernate.hbm2ddl.import_files_sql_extractor-->
        <property name="hibernate.hbm2ddl.import_files">schema-generation.sql</property>


<!--        <mapping resource="org/hibernate/tutorial/hbm/Event.hbm.xml"/>-->
        <mapping class="com.oct.entity.Person"/>
        <mapping class="com.oct.entity.Book"/>
        <mapping class="com.oct.entity.Customer"/>
        <!--4.2. Database objects-->
        <mapping resource="database-object.hbm.xml"/>

    </session-factory>




</hibernate-configuration>